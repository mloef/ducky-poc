{
	"manifest_version": 3,
	"name": "Talk-to-Claude",
	"version": "0.0.1",
	"description": "Talk to Claude through your microphone and hear its responses with a voice. Uses speech recognition and text-to-speech technologies",
	"action": {
		"default_popup": "popup.html",
		"default_icon": {              
		  "16": "images/icon-16.png",
		  "32": "images/icon-32.png"
		},
		"default_title": "Talk-to-Claude V0.0.1"
	},
	"content_scripts":[
		{
			"matches":[
				"https://claude.ai/chat*"
			],
			"js": ["jquery.min.js", "fontawesome.min.js", "content.js"]
		}
	],
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	}
}